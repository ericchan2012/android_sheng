    <attr name="ptrHeaderBackground" format="reference|color" />
    <attr name="ptrHeaderTextColor" format="color" />
    <attr name="ptrMode">
        <flag name="pullDownFromTop" value="0x00000001" />
        <flag name="pullUpFromBottom" value="0x00000002" />
        <flag name="both" value="0x00000003" />
    </attr>
    <declare-styleable name="RadioGroup">
	    <attr name="checkedButton" format="integer"></attr>
	</declare-styleable>
	<declare-styleable name="FlowIndicator">
        <attr name="count" format="integer" />
        <attr name="space" format="dimension" />
        <attr name="point_size" format="dimension" />
        <attr name="point_seleted_color" format="color|reference" />
        <attr name="point_normal_color" format="color|reference" />
        <attr name="point_radius" format="dimension" />
    </declare-styleable>
</resources>
