<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_layout"
    android:layout_width="fill_parent"
    android:layout_height="44.0dip"
    android:background="@drawable/header_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="10.0dip"
    android:paddingRight="10.0dip" >

    <Button
        android:id="@+id/top_left_btton"
        style="@style/top_left_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:onClick="topLeftButtonClicked"
        android:text="@string/back_text"
        android:visibility="invisible" />

    <Button
        android:id="@+id/top_right_button"
        style="@style/header_right_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="invisible" />

    <RadioGroup
        android:id="@+id/brand_header_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/top_right_button"
        android:layout_centerHorizontal="true"
        android:background="@drawable/header_radio_group_bg"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/top_left_radio"
            style="@style/top_left_radio"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:checked="true"
            android:text="1" />

        <RadioButton
            android:id="@+id/top_right_radio"
            style="@style/top_right_radio"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:text="2" />
    </RadioGroup>

</RelativeLayout>